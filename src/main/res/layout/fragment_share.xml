<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/bg">


    <ImageView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:src="@drawable/img_bg" />

    <TextView
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:layout_margin="16dp"
       android:text="لديك حساب !"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"/>

    <TextView
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اذا كان لديك حساب يمكنك تسجيل الدخول \n وسيتم تسجيل الدخول تلقائيا خلال المرات القادمة" />


    <EditText
        android:id="@+id/email"
        style="@style/EditextWide"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:hint="الريد الالكتروني او رقم الهاتف"
        android:padding="8dp" />

    <EditText
        android:id="@+id/password"
        style="@style/EditextWide"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:hint="كلمة المرور"
        android:padding="8dp" />

    <Button
        android:backgroundTint="@color/primary"
        style="@style/buttonWide"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        />

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="هل نسيت كلمة المرور او البريد الالكتروني ؟" />

    <Button
        android:backgroundTint="@color/accent"
        style="@style/buttonWide"
        android:id="@+id/forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="استرجاع البيانات" />

    <Button
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/accent"
        style="@style/buttonWide"
        android:id="@+id/regiser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حساب جديد" />


</LinearLayout>