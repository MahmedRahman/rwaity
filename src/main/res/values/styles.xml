<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/font</item>
        <item name="android:layoutDirection">rtl</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    //button
    <style name="buttonWide" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:radius">16dp</item>
        <item name="android:background">@drawable/primary_round</item>
    </style>

    <style name="buttonWide_material" parent="buttonWide">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppCompat.SearchResult.Title</item>

    </style>

    <style name="EditextWide">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:background">@drawable/input</item>
    </style>

    <style name="FragmenyStyle">
        <item name="android:background">@color/cardview_dark_background</item>
    </style>


    <style name="TextViewtitle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextViewSubtitle">
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="RatingBar" parent="@style/Widget.AppCompat.RatingBar.Indicator">
        <item name="ratingBarStyle">?android:attr/ratingBarStyleIndicator</item>
        <item name="ratingBarStyleSmall">@style/Widget.AppCompat.RatingBar.Indicator</item>
        <item name="android:progressTint">@color/duskYellow</item>
        <item name="android:progressBackgroundTint">@color/lightGrey</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="colorControlNormal">@color/duskYellow</item>
        <item name="colorControlActivated">@color/lightGrey</item>
    </style>




</resources>
